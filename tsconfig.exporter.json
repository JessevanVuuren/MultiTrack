{
  "compilerOptions": {
    "outDir": "dist/exporter",
    "declaration": true,
    "declarationDir": "dist/exporter",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmitOnError": false,
    "emitDeclarationOnly": false,
    "types": ["vite/client"]
  },
  "include": ["src/exporter/**/*"]
}

